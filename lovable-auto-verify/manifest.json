{
  "manifest_version": 3,
  "name": "Lovable Auto Verify",
  "version": "1.0.0",
  "description": "Automatically create accounts and verify identity on Lovable",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*.lovable.co/*",
    "*://mail.google.com/*",
    "*://outlook.live.com/*",
    "*://mail.yahoo.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.lovable.co/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}